/* Tema personalizado de Milkdown - Solo colores y tipografía */

.milkdown {
  /* Font Families - Solo títulos con Outfit */
  --crepe-font-title: var(--font-geist-sans), Outfit, Georgia, Cambria,
    "Times New Roman", Times, serif;
}

/* Reglas específicas para el componente readonly - eliminar padding y margin */
.milkdown-readonly .milkdown .milkdown-editor,
.milkdown-readonly .milkdown .crepe-editor,
.milkdown-readonly .milkdown .editor,
.milkdown-readonly .milkdown > div,
.milkdown-readonly .milkdown [data-milkdown-editor],
.milkdown-readonly .milkdown .crepe-editor-container {
  padding: 0 !important;
  margin: 0 !important;
}

/* Asegurar que el contenido del editor readonly no tenga padding */
.milkdown-readonly .milkdown .ProseMirror {
  padding: 0 !important;
  margin: 0 auto !important;
  max-width: 100% !important;
  text-align: left !important;
}

/* Centrar el contenido del markdown solo en readonly */
.milkdown-readonly .milkdown {
  display: flex !important;
  justify-content: center !important;
  align-items: flex-start !important;
  width: 100% !important;
}

.milkdown-readonly .milkdown .ProseMirror {
  width: 100% !important;
  max-width: none !important;
}

/* Estilos específicos para el editor (no readonly) */
.milkdown-editor .milkdown {
  height: 100% !important;
  min-height: 300px !important;
  width: 100% !important;
  position: relative !important;
}

.milkdown-editor .milkdown .ProseMirror {
  min-height: 300px !important;
  height: 100% !important;
  padding: 20px !important;
  margin: 0 !important;
  border: 1px solid #e5e7eb !important;
  border-radius: 8px !important;
  background: white !important;
  font-family: var(--font-geist-sans), -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, sans-serif !important;
  font-size: 14px !important;
  line-height: 1.6 !important;
  outline: none !important;
  overflow-y: auto !important;
}

.milkdown-editor .milkdown .ProseMirror:focus {
  border-color: #3b82f6 !important;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1) !important;
}

/* Mejorar la visibilidad del cursor */
.milkdown-editor .milkdown .ProseMirror .ProseMirror-cursor {
  border-color: #3b82f6 !important;
  width: 2px !important;
}

/* Placeholder para el editor */
.milkdown-editor .milkdown .ProseMirror p.is-empty::before {
  content: "Escribe aquí tu contenido...";
  color: #9ca3af;
  font-style: italic;
  pointer-events: none;
  float: left;
  height: 0;
}
